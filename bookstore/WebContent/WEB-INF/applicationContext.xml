	</bean>
	<bean id="ServiceOrderImplBId3" class="bookstore.service.spring.jtatx.OrderServiceWrapper">
	</bean>

	<!-- Struts Action Layer -->
	<!-- この層ではDIをxmlファイルの定義で行う -->
